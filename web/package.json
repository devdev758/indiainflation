{
  "name": "indiainflation-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "publish:phase2": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' scripts/publishPhase2Articles.ts",
    "publish:phase3": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' scripts/publishPhase3Articles.ts",
    "publish:phase4": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' scripts/publishPhase4Articles.ts",
    "report:phase3": "TS_NODE_PROJECT=tsconfig.json npx ts-node scripts/generatePhase3Report.ts",
    "report:phase4": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' -r tsconfig-paths/register scripts/generatePhase4Report.ts",
    "screenshots:phase3": "TS_NODE_PROJECT=tsconfig.json npx ts-node scripts/capturePhase3Screens.ts",
    "screenshots:phase4": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' -r tsconfig-paths/register scripts/capturePhase4Screens.ts",
    "validate:seo": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' scripts/validateSeo.ts",
    "seo:validate": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' -r tsconfig-paths/register scripts/validateStructuredData.ts",
    "sitemap:generate": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' scripts/generateSitemap.ts",
    "readiness:phase4": "npx ts-node --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' -r tsconfig-paths/register scripts/generatePhase4Checklist.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.667.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.59.13",
    "axios": "^1.7.9",
    "chart.js": "^4.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.545.0",
    "next": "15.0.0",
    "pg": "^8.16.3",
    "react": "19.0.0-rc-65a56d0e-20241020",
    "react-dom": "19.0.0-rc-65a56d0e-20241020",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "22.18.10",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19.0.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.10.0",
    "eslint-config-next": "15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "puppeteer": "^24.24.1",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.jest.json"
      }
    }
  }
}
